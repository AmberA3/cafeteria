<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/stylesheets/tstyle.css">
    <link rel="stylesheet" href="/public/stylesheets/style.css">
</head>
<body>
  <header>
    <div class="logo">
      <img
        src="https://cdn.discordapp.com/attachments/882362353507778613/975983795847172156/logo2-01-removebg-preview.png"
        alt="logo">
    </div>
  
    <a href="">Sign in</a>
  </header>

    <table>
        <thead>
          <th>ID</th>
          <th>Cohort</th>
          <th>First Name</th>
          <th>Last Name</th>
          <th>Date</th>
        </thead>
        <tbody>
        <% 
          if(trainees.length){
          
          for(var i = 0; i< trainees.length; i++) {
        %> 
          <tr>
            <td><%= trainees[i].id %></td>
            <td><%= trainees[i].cohort %></td>
            <td><%= trainees[i].firstNm %></td>
            <td><%= trainees[i].lastNm %></td>
            <td><%= trainees[i].date_joined.toLocaleDateString() %></td>
          </tr>
        <% } 
        }else { %>
            <tr>
              <td colspan="3">No Records Found</td>
            </tr>
        <% } %>
        </tbody>
      </table>
</body>
</html>